<body>
    <br><h1>---------Edit Form----------</h1><br>
    <form action="/names/<%= pangalan1._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Name:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter name" name="name" value="<%=pangalan1.name%>">
                <label for="exampleFormControlInput1" class="form-label">Age:</label>
                <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Enter age" name="age" value="<%=pangalan1.age%>">
                <label for="exampleFormControlInput1" class="form-label">Location:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter location" name="location" value="<%=pangalan1.location%>">
                <br>
                <button class="btn btn-primary">SAVE</button>
            </div>
    </form>
    <style>
            h1 {
                text-align: center;
            }
            form , h1 {
                max-width: 700px;
                width: 95%;
                margin: 0 auto;
                border: 3px solid gray;
                box-shadow: 5px 5px 5px black;
                padding: 10px;
            }
            
            .mb-3 label {
                font-weight:bold;
            }
    </style>
